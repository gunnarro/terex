<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/list_view_cell_shape"
    android:stretchColumns="1,1"
    tools:context="com.gunnarro.android.terex.ui.MainActivity">

    <TableRow>

        <TextView
            android:id="@+id/integration_line_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_span="1"
            android:gravity="start"
            android:text=""
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ic_integration_row_view"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="7dp"
            android:contentDescription="@string/btn_view"
            android:elevation="1dp"
            android:src="@drawable/ic_more_horiz_24px" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/integration_line_1_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="start"
            android:text="" />

        <TextView
            android:id="@+id/integration_line_1_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="" />
    </TableRow>
</TableLayout>
