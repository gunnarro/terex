<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_application"
    android:gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clients_view"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/title_clients"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_groups_48"
        app:iconGravity="textTop"
        app:iconSize="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_invoice_list_view"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/btn_clients_view"
        android:text="@string/title_invoice"
        android:textAlignment="gravity"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_article_black_48"
        app:iconGravity="textTop"
        app:iconSize="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_timesheet_list_view"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btn_clients_view"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/title_timesheet"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_punch_clock_black_48"
        app:iconGravity="textTop"
        app:iconSize="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_history_view"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/btn_invoice_list_view"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/btn_timesheet_list_view"
        android:text="@string/title_history"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_work_history_black_48"
        app:iconGravity="textTop"
        app:iconSize="48dp" />

</RelativeLayout>