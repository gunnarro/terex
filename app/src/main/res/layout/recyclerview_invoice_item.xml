<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/list_view_cell_shape"
    android:columnCount="2"
    android:elevation="2dp"
    android:rowCount="1"
    tools:context="com.gunnarro.android.terex.ui.MainActivity">

    <!-- first row, icon left aligned -->
    <TextView
        android:id="@+id/invoice_line_1_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:maxLines="3"
        android:text="Nov"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/invoice_line_1_status"
        android:stretchColumns="1,1">

        <TableRow>

            <TextView
                android:id="@+id/invoice_line_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_span="1"
                android:gravity="start"
                android:text=""
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/invoice_line_1_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:text="" />

            <TextView
                android:id="@+id/invoice_line_1_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/invoice_line_2_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:text="" />

            <TextView
                android:id="@+id/invoice_line_2_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="" />
        </TableRow>
    </TableLayout>

</RelativeLayout>